{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:css-modules/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "simple-import-sort",
    "css-modules"
  ],

  "ignorePatterns": ["node_modules/", "src/fonts/"],
  "rules": {
    "simple-import-sort/imports": "error",
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "react/no-unescaped-entities": 0
  },

  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
